@using Newtonsoft.Json
@using Vivid.ViewModels

@model IndexActorsViewModel

@{
    ViewBag.Title = "Actor";
}


<div class="container">
    <h2>Actor</h2>
    @Html.ActionLink("Create New", "Create", new { area = "" }, new { @class = "btn btn-sm btn-outline-secondary mt-2" })

    <table class="table my-4">
        <tr>
            <th>
                Name
            </th>
            <th>
                Bio
            </th>
            <th>
                City
            </th>
            <th></th>
        </tr>

        @foreach (var item in Model.ActorList)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Bio)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.City)
                </td>
                <td>
                    @Html.ActionLink("Edit", "Edit", new { id = item.Id }) |
                    @Html.ActionLink("Details", "Details", new { id = item.Id }) |
                    @Html.ActionLink("Delete", "Delete", new { id = item.Id })
                </td>
            </tr>
        }

    </table>

    @*<code class="text-black">
        <pre>
            @Html.Raw(JsonConvert.SerializeObject(Model.ActorList, Formatting.Indented))
        </pre>
    </code>*@
</div>

